<div class="container" style="padding-top: 10px;">
  <div class="row">
    <div class="col-md-9">
      <ol class="breadcrumb">
        <li><a href="/">柚子首页</a></li>
        {{#foreach category.breadcrumb}}
          <li><a href="{{path}}">{{name}}</a></li>
        {{/foreach}}
        <li><a href="{{category.path}}">{{category.name}}</a></li>
        <li class="active">{{text title words="15"}}</li>
      </ol>
      <div class="media col-md-12 yooz-product" style="margin: 0 0px 20px -20px;padding: 20px;">
          {{#if thumbnail}}
            <div class="media-left" style="padding: 0 20px 10px 0;">
              <img class="media-object" class="media-left" src="{{thumbnail.src}}" title="{{title}}" alt="{{thumbnail.description}}">
              <em style="left: 10px; top: 10px;">人气：{{reading.total}}</em>
            </div>
          {{/if}}
          <div class="media-body">
            <h4 class="media-heading text-overflow margin-bottom-10" style="white-space: normal;">
              <a href="{{url}}" title="{{title}}" target="_blank">{{title}}</a>
            </h4>
            {{#if abstract}}
              <p class="media-abstract">{{{abstract}}}</p>
            {{/if}}
            {{#if extensions.types}}<p>类型：{{extensions.types}}</p>{{/if}}
            {{#if extensions.g_face}}<p>外观：{{extensions.g_face}}</p>{{/if}}
            {{#if extensions.ration}}<p>尼古丁含量：{{extensions.ration}}</p>{{/if}}
            <p class="show_price">
              {{#if extensions.common_price}}<span>官方统一零售价：<strong>￥{{extensions.common_price}}</strong></span>{{/if}}
              <span class="pull-right">咨询底价：<input type="button" data-clipboard-action="copy" data-clipboard-target="#weixinCode" class="get_price_btn" value="点击复制微信号咨询"/></span>
            </p>
          </div>
      </div>
      <div class="media col-md-12 yooz-product" style="border-radius: 3px;padding: 20px 10px 30px;box-shadow: 0 1px 3px rgba(0,0,0,.5);">
          <div class="content">
            {{{content}}}
          </div>
          {{#if tags}}
            <hr>
            <div>
              标签：{{#foreach tags}}<span>{{this}}</span> {{/foreach}}
            </div>
          {{/if}}
        </div>

<div class="container" style="padding-top: 10px;">
  {{> weixin}}
  <div class="row">
    <div class="col-md-9">
      <ol class="breadcrumb">
        <li><a href="/">柚子首页</a></li>
        {{#foreach category.breadcrumb}}
          <li><a href="{{path}}">{{name}}</a></li>
        {{/foreach}}
        <li class="active">{{category.name}}</li>
      </ol>
      {{#foreach list.contents}}
        <div class="media">
          <h3 class="media-heading text-overflow margin-bottom-10"><a href="{{url}}" title="{{title}}" target="_blank">{{title}}</a></h3>
          {{#if thumbnail}}
            <a class="media-left" href="{{url}}" title="{{title}}" target="_blank">
              <img class="media-object" style="width: 100px;" src="{{thumbnail.src}}" title="{{title}}" alt="{{thumbnail.description}}">
            </a>
          {{/if}}
          <div class="media-body text-muted">
            {{#if abstract}}
              <p class="media-abstract"><a href="{{url}}" title="{{title}}" target="_blank">{{abstract}}</a></p>
            {{/if}}
            <p {{#if abstract}}class="article-bottom"{{/if}}><span>{{dateformat date format="YYYY年MM月DD日 HH:mm"}}</span><span class="pull-right">热度：{{reading.total}}</span></p>
          </div>
        </div>
        <hr>
      {{/foreach}}
      {{#if list.pagination}}
      <nav class="text-center">
        <ul class="pagination">
          {{#foreach list.pagination}}
            <li {{#if active}}class="active"{{/if}}>
              <a href="{{url}}">{{name}}</a>
            </li>
          {{/foreach}}
        </ul>
      </nav>
      {{/if}}
    </div>
    {{!-- <div class="col-md-3 hidden-xs hidden-sm"> --}}
    <div class="col-md-3">
      <div class="panel panel-default">
        <div class="panel-heading">资讯总排行</div>
        <ul class="list-group">
          {{#foreach readingList.total limit="10"}}
            <a href="{{href}}" title="{{title}}" class="list-group-item text-overflow">{{title}}</a>
          {{/foreach}}
        </ul>
      </div>
      {{#if readingList.prodTotal}}
      <div class="panel panel-default">
        <h4 class="panel-heading" style="margin: 0;">产品总排行</h4>
        <ul class="list-group">
          {{#foreach readingList.prodTotal limit="10"}}
          <a href="{{href}}" title="{{title}}" class="list-group-item text-overflow" style="text-align: center;">
            {{#if thumbnail}}
            <img class="media-object" src="{{thumbnail.src}}" title="{{title}}" alt="{{title}}" width="100%">
            {{/if}}
            <h6>{{title}}</h6>
          </a>
          {{/foreach}}
        </ul>
      </div>
      {{/if}}
